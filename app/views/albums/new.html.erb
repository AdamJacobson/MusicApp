<h1>Create an Album</h1>

<form action="<%= albums_url %>" method="post">
  <%= auth_token %>

  <label for="band">Band</label>
  <select id="band" name="album[band_id]">
    <% @all_bands.try(:each) do |band| %>
    <option value="<%= band.id%>" <%= 'selected' if @band.id == band.id %> ><%= band.name %></option>
    <% end %>
  </select>

  <br>

  <label for="name">Album Name</label>
  <input id="name" type="text" name="album[name]" value="">

  <br>

  Live?:
  <input id="live_true" type="radio" name="album[live]" value="true" checked>
  <label for="live_true">Yes</label>
  <input id="live_false" type="radio" name="album[live]" value="false">
  <label for="live_false">No</label>

  <br>

  <input type="submit" name="" value="Create Album">
</form>
